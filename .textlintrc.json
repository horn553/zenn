{
  "plugins": {},
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "/^::::/m"
      ]
    }
  },
  "rules": {
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "ja-no-successive-word": {
        "allow": ["…", "など"]
      },
      "ja-no-mixed-period": {
        "allowPeriodMarks": ["……"]
      },
      "no-mix-dearu-desumasu": {
        "preferInList": "ですます"
      },
      "ja-no-weak-phrase": false
    }
  }
}